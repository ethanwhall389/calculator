function add () {
    let final = 0;
    for (let i = 0; i < arguments.length; i++) {
        final += arguments[i];
    }
    return final;
}

function subtract (a, b) {
    return a - b;
}

function multiply (a, b) {
    return a * b;
}

function divide (a, b) {
    return a / b;
}


function operate (a, op, b) {
    switch (op) {
        case '+':
            return add(a, b);
            break;
        case '-':
            return subtract(a, b);
            break;
        case 'x':
            return multiply(a, b);
            break;
        case '/':
            return divide(a, b);
            break;
        default:
            return 'There has been an error.';
    }
}

